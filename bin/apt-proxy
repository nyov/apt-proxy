#!/usr/bin/python

from twisted.internet.app import Application
import apt_proxy.apt_proxy
from apt_proxy.apt_proxy_conf import aptProxyFactoryConfig
from apt_proxy.apt_proxy import AptProxyFactory

factory = AptProxyFactory()
aptProxyFactoryConfig(factory)
application = Application("AptProxy")
application.listenTCP(factory.proxy_port, factory)
if __name__ == '__main__':
    #Sorry moshez, but I don't jet feel confortable with twistd
    application.run(0)
