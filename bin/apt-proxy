#!/usr/bin/python2.3

from twisted.application import service, internet

from apt_proxy.apt_proxy_conf import factoryConfig
from apt_proxy.apt_proxy import Factory
from twisted.manhole.telnet import ShellFactory

factory = Factory()
shell = ShellFactory()

factoryConfig(factory, shell)

application = service.Application("AptProxy")

if shell.port:
    internet.TCPServer(shell.proxy_port, shell).setServiceParent(application)
internet.TCPServer(factory.proxy_port, factory).setServiceParent(application)

if __name__ == '__main__':
    #Sorry moshez, but I don't jet feel confortable with twistd
    application.run(0)
